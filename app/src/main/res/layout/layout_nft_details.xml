<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="@dimen/_20sdp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"

    >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:gravity="center"
                        android:padding="@dimen/_4sdp">
                        <ImageView
                            android:id="@+id/img_back"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            app:tint="?android:textColorPrimary"
                            android:src="@drawable/ic_baseline_close_24"
                            />
                        <TextView
                            android:visibility="invisible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New NFT"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="?android:textColorPrimary"
                            android:gravity="center"
                            android:textSize="@dimen/_13ssp"
                            android:paddingStart="-40dp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_toEndOf="@id/img_back"
                            android:paddingLeft="-40dp"
                            android:layout_toRightOf="@id/img_back" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_below="@+id/d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/news_shop"
                            app:civ_border_color="@android:color/darker_gray"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            app:civ_border_width="1dp" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl"
                        android:text="Nft Name"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_bold"
                        />
            <TextView               android:id="@+id/skills"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl"
                                    android:text="Nft Skills"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="?android:textColorPrimary"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_bold"
                                    />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:text="@string/like"
                            android:textColor="?android:textColorPrimary"
                            android:padding="@dimen/_8sdp"
                            android:drawableLeft="@drawable/ic_baseline_thumb_up_24"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ButtonRounded"
                            android:backgroundTint="@color/purple_500"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_14ssp"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:text="@string/message"
                            android:lines="1"
                            android:textColor="?android:textColorPrimary"
                            android:padding="@dimen/_8sdp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ButtonRounded"
                            android:backgroundTint="@color/purple_500"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginLeft="@dimen/_4sdp" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>